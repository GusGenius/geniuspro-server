[Unit]
Description=GeniusPro API Gateway
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=genius
WorkingDirectory=/home/genius/geniuspro-gateway
Environment=SUPABASE_URL=https://orajwuisgwffnrbjasaj.supabase.co
Environment=SUPABASE_SERVICE_KEY=your_supabase_service_key_here
Environment=OLLAMA_URL=http://localhost:11434
Environment=VOICE_SERVER_URL=http://localhost:8001
ExecStart=/home/genius/geniuspro-voice/bin/uvicorn gateway:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
