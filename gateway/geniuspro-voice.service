[Unit]
Description=GeniusPro Voice Server (S2S)
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=genius
WorkingDirectory=/home/genius/geniuspro-voice-server
Environment=WHISPER_MODEL=large-v3-turbo
Environment=OLLAMA_URL=http://localhost:11434
Environment=OLLAMA_MODEL=geniuspro-coder-v1
Environment=VIBEVOICE_MODEL=microsoft/VibeVoice-Realtime-0.5B
Environment=VOICE_PRESET=en-Carter_man
ExecStart=/home/genius/geniuspro-voice/bin/uvicorn server:app --host 127.0.0.1 --port 8001
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
